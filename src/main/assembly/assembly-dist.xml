<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
		  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>distribution</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>target</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>fim-${project.version}.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>fim-*-sources.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/script</directory>
			<outputDirectory></outputDirectory>
			<filtered>true</filtered>
			<includes>
				<include>fim</include>
				<include>fim.bat</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>LICENSE</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/gh-pages</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>*.html</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/gh-pages/images</directory>
			<outputDirectory>images</outputDirectory>
			<includes>
				<include>*.png</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/gh-pages/strapdown</directory>
			<outputDirectory>strapdown</outputDirectory>
			<includes>
				<include>*.js</include>
				<include>*.css</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
